@model ResumeBuilder.Models.ViewModel.UserResumeVM
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" href="~/Images/user.jpg">
    <title>@Model.FirstName @Model.LastName</title>

    <!-- Global stylesheets -->
    <link href="~/Scripts/css/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
    <link href="~/Scripts/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Scripts/css/simple-line-icons/css/simple-line-icons.css" rel="stylesheet">
    <link href="~/Scripts/css/style.css" rel="stylesheet">
</head>

<body id="page-top">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="sideNav">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#about">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#educations">Educations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#experience">Experience</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#projects">Projects</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#skills">Skills</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#languages">Languages</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#contact">Contacts</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid p-0">

        <!--About-->
        <section class="resume-section p-3 p-lg-5 d-flex d-column bg-dark" id="about">
            <div class="my-auto">
                <h1 class="mb-0 text-white">
                    @Model.FirstName
                    <span class="text-primary">@Model.LastName</span>
                </h1>
                <p class="mb-5"> @Model.Summary </p>
            </div>
        </section>

        <!--Educations-->
        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="educations">
            <div class="row my-auto">
                <div class="col-12">
                    <h2 class=" text-center">Educations</h2>
                    <div class="mb-5 heading-border"></div>
                </div>
                <div class="main-educations" id="educations-box">
                    @foreach (var userEducations in Model.Education)
                    {
                        <div class="educations">
                            <div class="educations-icon"></div>
                            <div class="educations-content">

                                <span class="date"> @userEducations.YearOfPassing </span>
                                <h5 class="title">
                                    @userEducations.Score @userEducations.CGPAorPercentage in @userEducations.EducationLevel


                                </h5>
                                <p class="description">

                                    @userEducations.Institution
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

        <!--Experience-->
        <section class="resume-section p-3 p-lg-5 " id="experience">
            <div class="row my-auto">
                <div class="col-12">
                    <h2 class="  text-center">Experience</h2>
                    <div class="mb-5 heading-border"></div>
                </div>
                @foreach (var userWorkExperience in Model.WorkExperience)
                {
                    <div class="resume-item col-md-6 col-sm-12 ">
                        <div class="card mx-0 p-4 mb-5">
                            <div class=" resume-content mr-auto">
                                <h4 class="mb-3">@userWorkExperience.Designation</h4>
                                <p>
                                    @userWorkExperience.Organization
                                </p>
                            </div>
                            <div class="resume-date text-md-right">
                                <span class="text-primary">@String.Format("{0:dd/MM/yyyy}", @userWorkExperience.FromYear) - @String.Format("{0:dd/MM/yyyy}", @userWorkExperience.ToYear)</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

        <!--Project-->
        <section class="resume-section p-3 p-lg-5 " id="projects">
            <div class="row my-auto">
                <div class="col-12">
                    <h2 class="  text-center">Projects</h2>
                    <div class="mb-5 heading-border"></div>
                </div>
                @foreach (var userProject in Model.Project)
                {
                    <div class="resume-item col-md-6 col-sm-12 ">
                        <div class="card mx-0 p-4 mb-5">
                            <div class=" resume-content mr-auto">
                                <h4 class="mb-3">@userProject.ProjectName</h4>

                                <p>@userProject.ProjectDetails</p>
                                <p>
                                    Role:- @userProject.YourRole<br />
                                    @*Skills:- @userProject.ProjectSkills<br />*@
                                </p>
                            </div>
                            <div class="resume-date text-md-right">
                                <span class="text-primary">@userProject.DurationInMonth Months</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

        <!--Skills-->
        <section class=" d-flex flex-column" id="skills">
            <div class="p-lg-5 p-3 skill-cover">
                <h3 class="text-center text-white">Coding Skills</h3>
                <div class="row text-center my-auto ">
                    @foreach (var userSkill in Model.Skill)
                    {
                        <div class="col-md-3 col-sm-6">
                            <div class="skill-item">
                                <p>@userSkill.SkillName</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
        <br /><br />

        <!--Language-->
        <section class=" d-flex flex-column" id="languages">
            <div class="p-lg-5 p-3 language-cover">
                <h3 class="text-center text-white">Languages</h3>
                <div class="row text-center my-auto ">
                    @foreach (var userLanguage in Model.Language)
                    {
                        <div class="col-md-3 col-sm-6">
                            <div class="language-item">
                                <p>@userLanguage.LanguageName</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

        <!--Contacts-->
        <section class="resume-section p-3 p-lg-5 d-flex flex-column">
            <div class="row my-auto" id="contact">
                <div class="col-12">
                    <h2 class="  text-center">Contacts</h2>
                    <div class="mb-5 heading-border"></div>
                </div>
                <div class="col-md-4 col-sm-12 mt-5">
                    <div class="contact-cont2">
                        <div class="contact-phone contact-side-desc contact-box-desc">
                            <h3><i class="fa fa-phone cl-atlantis fa-2x"></i> Phone</h3>
                            <p>@Model.PhoneNumber <br>@Model.AlternatePhoneNumber</p>
                        </div>
                        <div class="contact-mail contact-side-desc contact-box-desc">
                            <h3><i class="fa fa-envelope-o cl-atlantis fa-2x"></i> Email</h3>
                            <address class="address-details-f">
                                Email: <a href="mailto:@Model.Email" class="">@Model.Email</a>
                            </address>
                        </div>
                    </div>
                </div>
            </div>
        </section>


    </div>
    <!-- Global javascript -->
    <script src="~/Scripts/js/jquery/jquery.min.js"></script>
    <script src="~/Scripts/js/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/js/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Scripts/js/custom.js"></script>
</body>
</html>