<div class="row mt-5">
    <div class="col-md-4">
        <div class="container mt-5">
            <h2 class="text-center">Welcome</h2>
            <h2 class="text-center">To</h2>
            <h2 class="text-center">Resume Builder</h2>
        </div>
    </div>
    <div class="col-md-8">
        <div class="container">
            @using (Html.BeginForm())
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <i class="fa fa-user"></i>
                        @Html.LabelFor(x => x.UserName)
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <i class="fa fa-lock"></i>
                        @Html.LabelFor(x => x.UserPassword)
                        @Html.TextBoxFor(x => x.UserPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.UserPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">LOGIN</button>
                        <button type="reset" class="btn btn-warning text-white">RESET</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

