@model ResumeBuilder.Models.ViewModel.UserResumeVM

@{
    Layout = null;
}
<div class="container-fluid bg-light mt-5 mb-5 w-100 p-3">
    <h3>Basic Information</h3>
    <form class="p-4 basic-info-form" method="post" action="">
        <div class="row">
            <div class="col">
                <label class="" for="firstName">First Name</label>
                <input type="text" class="form-control" name="firstName" placeholder="First name" />
            </div>
            <div class="col">
                <label class="" for="lastName">Last Name</label>
                <input type="text" class="form-control" name="lastName" placeholder="Last name" />
            </div>
        </div>
        <div class="mb-2">
            <label for="email">Email</label>
            <input type="text" class="form-control" name="email" placeholder="Email" />
        </div>
        <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 " data-toggle="modal" data-target=".summaryModal">Summary<i class="fa fa-edit pl-3 float-right mt-1"></i></a>
    </div>
    <hr />
    <div>
        <h3>Education</h3>
        @foreach (var userEducation in Model.Education)
        {
            <div class="row container">
                <div class="col-md-8 text-secondary">
                    <p>
                        <b>@userEducation.Score in @userEducation.EducationLevel </b>
                        <br />
                        <b>Stream : @userEducation.Stream </b>
                        <br />
                        <b>Board :@userEducation.Board </b>
                        <br />
                        <b> University/School : @userEducation.Institution </b>
                    </p>
                </div>
                <div class="col-md-4">
                    <button class="btn btn-danger float-right"> X </button>
                </div>
            </div>
        }
        <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 " data-toggle="modal" data-target=".educationModal">Education<i class="fa fa-edit pl-3 float-right mt-1"></i></a>
    </div>
    <hr />
    <div>
        <h3>Work Experience</h3>
        <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 " data-toggle="modal" data-target=".workexperienceModal">Work Experience<i class="fa fa-edit pl-3 float-right mt-1"></i></a>
    </div>
    <hr />
    <div>
        <h3>Projects</h3>
        <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 " data-toggle="modal" data-target=".projectModal">Projects<i class="fa fa-edit pl-3 float-right mt-1"></i></a>
    </div>
    <hr />
    <div>
        <h3>Language</h3>
        <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 " data-toggle="modal" data-target=".languageModal">Languages<i class="fa fa-edit pl-3 float-right mt-1"></i></a>
    </div>
    <hr />
    <div>
        <h3>Skills</h3>
        <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 " data-toggle="modal" data-target=".skillModal">Skills<i class="fa fa-edit pl-3 float-right mt-1"></i></a>
    </div>
</div>


<!-- Modals -->

<div class="modal fade basicInfomodal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Basic Information</h4>
                <button type="button" class="close text-danger" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    <div class="row">
                        <div class="col">
                            @Html.LabelFor(x => x.FirstName)
                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                            @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col">
                            @Html.LabelFor(x => x.LastName)
                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                            @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="mb-2">
                        @Html.LabelFor(x => x.Email)
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
                        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-2">
                        @Html.LabelFor(x => x.PhoneNumber)
                        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", @placeholder = "Phone Number", @maxlength = 12, @autocomplete = "off" })
                        @Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-4">
                        @Html.LabelFor(x => x.AlternatePhoneNumber)
                        @Html.TextBoxFor(x => x.AlternatePhoneNumber, new { @class = "form-control", @placeholder = "Alternate Phone Number", @maxlength = 12, @autocomplete = "off", @required = "required" })
                        @Html.ValidationMessageFor(x => x.AlternatePhoneNumber, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="mt-2 btn btn-sm btn-success ajax-change save-basic-info">SAVE</button>
                }
            </div>

        </div>
    </form>
    <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 " data-toggle="modal" data-target=".summaryModal">Summary<i class="fas fa-plus-circle pl-3 float-right mt-1"></i></a>
    <span class="summaryData"></span>
    <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 " data-toggle="modal" data-target=".educationModal">Education<i class="fas fa-plus-circle pl-3 float-right mt-1"></i></a>
    <span class="educationData"></span>
    <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 " data-toggle="modal" data-target=".workexperienceModal">Work Experience<i class="fas fa-plus-circle pl-3 float-right mt-1"></i></a>
    <span class="workexpData"></span>
    <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 " data-toggle="modal" data-target=".projectModal">Projects<i class="fas fa-plus-circle pl-3 float-right mt-1"></i></a>
    <span class="projectData"></span>
    <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 " data-toggle="modal" data-target=".languageModal">Languages<i class="fas fa-plus-circle pl-3 float-right mt-1"></i></a>
    <span class="languageData"></span>
    <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 " data-toggle="modal" data-target=".skillModal">Skills<i class="fas fa-plus-circle pl-3 float-right mt-1"></i></a>
    <span class="skillData"></span>
</div>


<!-- Modals -->

<div class="modal fade summaryModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close text-danger" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <h2>Summary</h2>
                <form class="summary-form">
                    <div class="form-group">
                        <label>Resume Name</label>
                        <input type="text" class="form-control" name="resumeName" />
                    </div>
                    <div class="form-group">
                        <label>Summary</label>
                        <textarea class="form-control" name="summary" rows="3"></textarea>
                    </div>
                    <button type="button" class="mt-2 btn btn-sm btn-success save-summary btn-save">SAVE</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!--Education Modal-->

<div class="modal fade educationModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content bg-dark text-white">
            <div class="modal-body">
                <h2>Education</h2>
                <form action="/" method="post" class="education-form">
                    <div class="education-form-id" value="" hidden></div>
                    <div class="form-group mt-2">
                        <div class="row">
                            <div class="col-md-3">
                                <label class="form-check-label ml-4">
                                    <input type="radio" class="form-check-input" name="EducationLevel" value="10th" />10th
                                </label>
                            </div>
                            <div class="col-md-3">

                                <label class="form-check-label ml-4">
                                    <input type="radio" class="form-check-input" name="EducationLevel" value="12th" />12th
                                </label>
                            </div>
                            <div class="col-md-3">
                                <label class="form-check-label ml-4">
                                    <input type="radio" class="form-check-input" name="EducationLevel" value="Graduation" />Graduation
                                </label>
                            </div>
                            <div class="col-md-3">
                                <label class="form-check-label ml-4">
                                    <input type="radio" class="form-check-input" name="EducationLevel" value="Post Graduation" />Post Graduation
                                </label>
                            </div>
                        </div>
                        <div class="mt-3 mb-3">
                            <input type="text" class="form-control" name="yop" placeholder="Year of Passing" />
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-check-label ml-5">
                                    <input type="radio" class="form-check-input" name="optradio" value="cgpa" />CGPA
                                </label>
                            </div>
                            <div class="col-md-6">

                                <label class="form-check-label ml-4">
                                    <input type="radio" class="form-check-input" name="optradio" value="percentage" />Percentage
                                </label>
                            </div>
                        </div>

                        <div class="input-group">
                            <input type="text" class="form-control" name="Score" placeholder="Marks Obtained" />
                            <input type="text" class="form-control" name="Stream" placeholder="STREAM" />
                        </div>
                        <div class="input-group mt-3">
                            <input type="text" class="form-control" name="Board" placeholder="BOARD" />
                            <input type="text" class="form-control" name="Institution" placeholder="UNIVERSITY" />
                        </div>
                    </div>
                    <button type="submit" class="mt-2 btn btn-sm btn-success save-education-info btn-save">SAVE</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!--Work Experience Modal-->
<div class="modal fade workexperienceModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content bg-dark text-white">
            <div class="modal-body">
                <h2>Work Experience</h2>
                <form class="workExp-form">
                    <div class="form-group">
                        <input type="text" class="form-control mb-4" placeholder="Organization" />
                        <input type="text" class="form-control" placeholder="Designation" />
                    </div>
                    <div class="row form-group">
                        <div class="col-md-6">
                            <label class="form-label">From</label>
                            <input class="form-control" type="date" placeholder="From Year" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">To</label>
                            <input class="form-control" type="date" placeholder="To Year" />
                        </div>
                    </div>
                    <button type="button" class="mt-2 btn btn-sm btn-success save-work btn-save">SAVE</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Project Modal -->
<div class="modal fade projectModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content bg-dark text-white">
            <div class="modal-body">
                <h2>Projects</h2>
                <form class="projects-form">
                    <div class="mt-3 mb-3">
                        <input type="text" class="form-control mt-3" name="projectName" placeholder="Project Name" />
                        <textarea class="form-control mt-3" name="projectDetails" rows="3" cols="50" placeholder="Project Details"></textarea>
                        <input type="text" class="form-control mt-3" name="projectRole" placeholder="Project Role" />
                        <div class="input-group mt-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="projectDuration">Project Duration ( Months )</label>
                            </div>
                            <select class="custom-select project-duration" id="projectDuration"></select>
                        </div>
                    </div>
                    <button type="button" class="mt-2 btn btn-sm btn-success save-work btn-save">SAVE</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Skills Modal -->
<div class="modal fade skillModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content bg-dark text-white">
            <div class="modal-body">
                <h2>Skills</h2>
                <form class="skills-form">
                    <div class="mt-3 mb-3">
                        <input type="text" class="form-control" name="skill" placeholder="Add Skills" />
                    </div>
                    <button type="button" class="mt-2 btn btn-sm btn-success save-work btn-save">SAVE</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Language Modal -->
<div class="modal fade languageModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content bg-dark text-white">
            <div class="modal-body">
                <h2>Language</h2>
                <form class="language-form">
                    <div class="mt-3 mb-3">
                        <input type="text" class="form-control" name="language" placeholder="Add Language" />
                    </div>
                    <button type="button" class="mt-2 btn btn-sm btn-success save-work btn-save">SAVE</button>
                </form>
            </div>
        </div>
    </div>
</div>