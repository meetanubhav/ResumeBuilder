@{
    Layout = null;
}
<div class="container-fluid bg-light mt-5 mb-5 w-75 p-3">
    <h3>Basic Information</h3>
    <form class="p-4 basic-info-form" method="post" action="">
        <div class="row">
            <div class="col">
                <label class="" for="firstName">First Name</label>
                <input type="text" class="form-control" name="firstName" placeholder="First name" />
            </div>
            <div class="col">
                <label class="" for="lastName">Last Name</label>
                <input type="text" class="form-control" name="lastName" placeholder="Last name" />
            </div>
        </div>
        <div class="form-group mb-2">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" placeholder="Email" />
        </div>
        <div class="form-group mb-4">
            <label for="contact">Contact</label>
            <input type="number" class="form-control" name="contact" placeholder="Phone Number" />
        </div>
        <button type="button" class="mt-2 btn btn-sm btn-success save-basic-info">SAVE</button>
    </form>
    <!-- Summary Section -->
    <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 js-click">Summary<i class="fas fa-plus-circle pl-3 float-right mt-1"></i></a>
    <div class="js-toggle mb-2 hide">
        <form class="summary-form">
            <div class="form-group">
                <label>Resume Name</label>
                <input type="text" class="form-control" name="resumeName" />
            </div>
            <div class="form-group">
                <label>Summary</label>
                <textarea class="form-control" name="summary" rows="3"></textarea>
            </div>
            <button type="button" class="mt-2 btn btn-sm btn-success save-summary btn-save">SAVE</button>
        </form>
    </div>
    <!-- Education Section -->
    <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 js-click">Education<i class="fas fa-plus-circle pl-3 float-right mt-1"></i></a>
    <div class="js-toggle mb-3 hide">
        <form action="/" method="post" class="education-form">
            <div class="form-group mt-2">
                <div class="row">
                    <div class="col-md-3">
                        <label class="form-check-label ml-4">
                            <input type="radio" class="form-check-input" name="educationLevel" value="secondary" />10th
                        </label>
                    </div>
                    <div class="col-md-3">
                        <label class="form-check-label ml-4">
                            <input type="radio" class="form-check-input" name="educationLevel" value="seniorSecondary" />12th
                        </label>
                    </div>
                    <div class="col-md-3">
                        <label class="form-check-label ml-4">
                            <input type="radio" class="form-check-input" name="educationLevel" value="graduation" />Graduation
                        </label>
                    </div>
                    <div class="col-md-3">
                        <label class="form-check-label ml-4">
                            <input type="radio" class="form-check-input" name="educationLevel" value="postGraduation" />Post Graduation
                        </label>
                    </div>
                </div>
                <div class="mt-3 mb-3">
                    <input type="text" class="form-control" name="yop" placeholder="Year of Passing" />
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-check-label ml-5">
                            <input type="radio" class="form-check-input" name="optradio" value="cgpa" />CGPA
                        </label>
                    </div>
                    <div class="col-md-6">
                        <label class="form-check-label ml-4">
                            <input type="radio" class="form-check-input" name="optradio" value="percentage" />Percentage
                        </label>
                    </div>
                </div>
                <div class="input-group">
                    <input type="text" class="form-control" name="gradetype" placeholder="CGPA" />
                    <input type="text" class="form-control" name="stream" placeholder="STREAM" />
                    <input type="text" class="form-control" name="university" placeholder="UNIVERSITY" />
                </div>
            </div>
            <button type="button" class="mt-2 btn btn-sm btn-success save-education btn-save">SAVE</button>
        </form>
    </div>
    <!-- Work experience Section-->
    <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 js-click">Work Experience<i class="fas fa-plus-circle pl-3 float-right mt-1"></i></a>
    <div class="js-toggle mb-3">
        <form method="post" class="workExp-form">
            <div class="form-group">
                <input type="text" class="form-control mb-4" placeholder="Organization" />
                <input type="text" class="form-control" placeholder="Designation" />
            </div>
            <div class="row form-group">
                <div class="col-md-6">
                    <label class="form-label">From</label>
                    <input class="form-control" type="text" placeholder="From Year" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">To</label>
                    <input class="form-control" type="text" placeholder="To Year" />
                </div>
            </div>
            <button type="button" class="mt-2 btn btn-sm btn-success save-work btn-save">SAVE</button>
        </form>
    </div>
    <!-- Project Section-->
    <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 js-click">Projects<i class="fas fa-plus-circle pl-3 float-right mt-1"></i></a>
    <div class="js-toggle mb-4">
        <form class="projects-form">
            <div class="mt-3 mb-3">
                <input type="text" class="form-control mt-3" name="projectName" placeholder="Project Name" />
                <textarea class="form-control mt-3" name="projectDetails" rows="3" cols="50" placeholder="Project Details"></textarea>
                <input type="text" class="form-control mt-3" name="projectRole" placeholder="Project Role" />
                <div class="input-group mt-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="projectDuration">Project Duration ( Months )</label>
                    </div>
                    <select class="custom-select project-duration" id="projectDuration"></select>
                </div>
            </div>
            <button type="button" class="mt-2 btn btn-sm btn-success save-work btn-save">SAVE</button>
        </form>
    </div>
    <!--Skill Section -->
    <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 js-click">Skills<i class="fas fa-plus-circle pl-3 float-right mt-1"></i></a>
    <div class="js-toggle mb-4">
        <form class="skills-form">
            <div class="mt-3 mb-3">
                <input type="text" class="form-control" name="skill" placeholder="Add Skills" />
            </div>
            <button type="button" class="mt-2 btn btn-sm btn-success save-work btn-save">SAVE</button>
        </form>
    </div>
    <!--Languages Section -->
    <a class="list-group-item list-group-item-action bg-info rounded p-md-2 mb-2 js-click">Languages<i class="fas fa-plus-circle pl-3 float-right mt-1"></i></a>
    <div class="js-toggle mb-4">
        <form class="language-form">
            <div class="mt-3 mb-3">
                <input type="text" class="form-control" name="language" placeholder="Add Language" />
            </div>
            <button type="button" class="mt-2 btn btn-sm btn-success save-work btn-save">SAVE</button>
        </form>
    </div>
</div>